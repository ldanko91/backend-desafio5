<body>
  <button id="productButton">Ver productos</button>
  <h1>Modifica un producto!</h1>
  <form action="/editar" method="put">
    <input type="number" placeholder="ID Producto" name="id" /><br />
    <input type="text" placeholder="Nombre" name="name" /><br />
    <input type="number" placeholder="Precio" name="price" /><br />
    <input type="text" placeholder="Imagen" name="thumbnail" /><br />
    {{!-- <input type="submit" value="1- Cargar cambios" /><br> --}}
    <input id="putButton" type="submit" value="2- Confirmar cambios" />
  </form>

  <script>
    const productButton = document.getElementById("productButton");
    productButton.addEventListener("click", (event) => {
      window.location = "/product";
    });
  </script>

  <script>
    const putButton = document.getElementById("putButton");
    putButton.addEventListener("click", (event) => {
      event.preventDefault();
    });
  </script>

</body>

